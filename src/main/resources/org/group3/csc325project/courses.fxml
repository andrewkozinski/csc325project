<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<BorderPane prefHeight="600.0" prefWidth="910.0" stylesheets="@../../../CSS/courses.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group3.csc325project.CoursesController">
    <center>
        <TableView fx:id="coursesTable" onMouseClicked="#handleCoursesTableViewMouseClick" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="columnCrn" prefWidth="57.6" text="CRN" />
                <TableColumn fx:id="columnCourseCode" prefWidth="76.0" text="Course Code" />
                <TableColumn fx:id="columnCourseName" prefWidth="117.6" text="Course Name" />
                <TableColumn fx:id="columnInstructor" prefWidth="104.0" text="Instructor" />
                <TableColumn fx:id="columnCredits" prefWidth="45.6" text="Credits" />
                <TableColumn fx:id="columnCourseSchedule" prefWidth="120.0" text="Course Schedule" />
                <TableColumn fx:id="columnCourseDays" prefWidth="104.8" text="Course Days" />
                <TableColumn fx:id="columnCourseLocation" prefWidth="112.0" text="Course Location" />
                <TableColumn fx:id="columnCourseCapacity" prefWidth="79.2" text="Capacity" />
                <TableColumn fx:id="columnCourseWaitlist" prefWidth="79.2" text="Waitlist" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <TabPane>
            <tabs>
                <Tab text="Enrolled Students">
                    <TableView fx:id="studentsTable" onMouseClicked="#handleStudentsTableViewMouseClick" prefHeight="150.0">
                        <columns>
                            <TableColumn fx:id="columnStudentName" prefWidth="150.0" text="Student Name" />
                            <TableColumn fx:id="columnStudentID" prefWidth="120.0" text="Student ID" />
                        </columns>
                    </TableView>
                </Tab>
                <Tab text="Waitlisted Students">
                    <TableView fx:id="waitlistTable" onMouseClicked="#handleWaitlistTableViewMouseClick" prefHeight="300.0">
                    <columns>
                            <TableColumn fx:id="columnWaitlistStudentName" text="Student Name" />
                            <TableColumn fx:id="columnWaitlistStudentID" text="Student ID" />
                            <TableColumn fx:id="columnWaitlistDate" text="Date Waitlisted" />
                        </columns>
                    </TableView>
                </Tab>
            </tabs>
        </TabPane>
    </bottom>
    <VBox spacing="10.0" alignment="CENTER">
        <!-- Existing fields like CRN, Course Code, etc. -->
        <HBox spacing="10.0">
            <Label text="Professor:" />
            <ComboBox fx:id="professorComboBox" prefWidth="200.0" />
        </HBox>
        <!-- Other fields like Days, Time, Location, etc. -->
    </VBox>
    <top>
        <HBox fx:id="topHBox" alignment="CENTER" spacing="5.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddCourseButton" text="Add Course" />
                <Button mnemonicParsing="false" onAction="#handleEditCourseButton" text="Edit Course" />
                <Button mnemonicParsing="false" onAction="#assignCourseButton" text="Assign Course" />
                <Button fx:id="removeStudentButton" onAction="#handleRemoveStudentButton" text="Remove Student"/>
                <Button mnemonicParsing="false" onAction="#backButton" text="Back (temp button)" />
            </children>
        </HBox>
    </top>
</BorderPane>
